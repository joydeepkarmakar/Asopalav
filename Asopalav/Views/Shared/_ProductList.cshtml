<div id="breadcrumbs" class="product-margin-top">
    <div class="container">
        <ul>
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li><a href="@Url.Action(ViewData["ProductListPage"].ToString(),"Home")">@ViewData["ProductListPage"]</a></li>
        </ul>
    </div>
    <!-- / container -->
</div>
<!-- / body -->
<div id="body">
    <div class="container product-list-top">
        <div class="pagination">
            <ul>
                <li><a href="#"><span class="ico-prev"></span></a></li>
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#"><span class="ico-next"></span></a></li>
            </ul>
        </div>
        <div class="products-wrap">
            <aside id="sidebar">
                <div class="widget">
                    <h3>Products per page:</h3>
                    <form>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">8</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">16</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">32</label>
                        </div>
                    </form>
                </div>
                <div class="widget">
                    <h3>Sort by:</h3>
                    <form>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Popularity</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Date</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Price</label>
                        </div>
                    </form>
                </div>
                <div class="widget">
                    <h3>Condition:</h3>
                    <form>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">New</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Used</label>
                        </div>
                    </form>
                </div>
                <div class="widget">
                    <h3>Price range:</h3>
                    <fieldset>
                        <div id="price-range"></div>
                    </fieldset>
                </div>
            </aside>
            <div id="content">
                <section class="products">
                    @if (Model.Count != 0)
                    {
                        foreach (var item in Model)
                        {
                            <article>
                                <div class="hovereffect">
                                    <img src="@item.ImagePath" alt="@item.ProductName" width="235" height="275">
                                    <div class="overlay">
                                        <h2>@item.ProductCode</h2>
                                        <p>
                                            <a href="@Url.Action("Index", "ProductDetails", new { id = @Shared.EncriptValue(item.ProductID.ToString()) })">Details</a>
                                        </p>
                                    </div>
                                </div>
                                <h3>@item.ProductName</h3>
                                <h4>$@item.Price.ToString("0.00")</h4>
                                <a href="@Url.Action("Index", "CartDetails")" class="btn-add">Add to cart</a>
                            </article>
                        }
                    }
                    else
                    {
                        <img src="~/Content/images/no-magento-product-found.jpg" />
                    }
                </section>
            </div>
            <!-- / content -->
        </div>
