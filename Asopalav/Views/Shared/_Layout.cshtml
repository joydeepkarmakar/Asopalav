<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/favicon.ico")" />
    <title>Asopalav Jewellers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Style/Common")
</head>
<body>
    <div class="hd-fix">
        <header id="header" class="hd-background">
            <div class="container">
                <div class="col-xs-12 col-sm-5"><a href="javascript:void(0);" id="logo" title="Asopalav Jewellers">Asopalav Jewellers</a></div>
                <div class="col-xs-12 col-sm-3 shree-hari-middle">
                    <img src="~/Content/images/ShreeHari.gif" />
                </div>
                <div class="col-xs-12 col-sm-5 right-links device-price-margin" style="margin-right:10px">
                    <ul><li>Dollar Rate = @Session["DollarRate"] INR | Silver Rate = @Session["SilverRate"] INR/Kg</li></ul>
                </div>

                @*<div class="shree-hari"><img src="~/Content/images/ShreeHari.gif" style="width:50px;" /></div>*@
                <div class="col-xs-12 col-sm-7 right-links pull-right">
                    <div class="col-xs-9 col-sm-3 device-login pull-right" style="padding-left:0;padding-right:0;">
                        <ul class="nav navbar-nav navbar-right device-log-margin">

                            @if (Convert.ToBoolean(Session["IsLoginValid"]) == true)
                            {
                                @Html.AntiForgeryToken()

                                <li>
                                    <p>@Html.ActionLink("Welcome " + Session["UserFullName"] + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })</p> | <p>@Html.ActionLink("Log off", "LogOff", "Account", new { area = "" }, new { })</p>
                                </li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "font-size:14px;" }) </li>

                            }
                        </ul>
                    </div>
                    <div class="col-xs-12 col-sm-6 pull-right" style="padding:3px 0 0 0">
                        <div class="profile-container device-card-margin" style="float:right; margin-top:7px;">
                            <a class="_3NFO0d JvUE0p" href="/viewcart?otracker=Cart_Icon_Click">
                                <div class="_1jJkOg">
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                    <span>Cart</span>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </header>
        <!-- / header -->
        <nav id="menu">
            <div class="container" style="width:100% !important; background:#fff; margin-top:6px;border-bottom: 1px solid #ccc;">
                <div class="trigger"></div>
                <ul id="ulMenu">
                    <li>
                        <a href="@Url.Action("Index", "Home")" title="Asopalav" id="imgLogoThumb" style="display:none;">
                            <img alt="Asopalav" src="@Url.Content("~/Content/images/logo_thumb.GIF")">
                        </a>
                    </li>
                    @*<li><a href="javascript:void(0);" id="HomeMenu">Home</a></li>
                        <li><a href="javascript:void(0);">Silverware</a></li>*@
                    <li>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @id = "HomeMenu" })</li>
                    <li>@Html.ActionLink("Silverware", "Silverware", "Home", new { page = "Silverware" }, new { @id = "Silverware" })</li>
                    <li>
                        <a href="javascript:void(0);" id="mnuGifts">Gifts</a>
                        <ul id="ulGiftsSubmenu" class="gifts-submenu" style="display:none;">
                            <li>@Html.ActionLink("Personalize", "Personalize", "Home", new { page = "Personalize" }, null)</li>
                            <li>@Html.ActionLink("Corporate", "Corporate", "Home", new { page = "Corporate" }, null)</li>
                            <li>@Html.ActionLink("Kids", "Kids", "Home", new { page = "Kids" }, null)</li>
                            <li>@Html.ActionLink("Festive", "Festive", "Home", new { page = "Festive" }, null)</li>
                            @*<li><a href="javascript:void(0);">Personalize</a></li>
                                <li><a href="javascript:void(0);">Corporate</a></li>
                                <li><a href="javascript:void(0);">Kids</a></li>
                                <li><a href="javascript:void(0);">Festive</a></li>*@
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Fine Metal", "FineMetal", "Home", new { page = "FineMetal" }, null)</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                    @*<li><a href="javascript:void(0);">FineMetal</a></li>
                        <li><a href="javascript:void(0);">About us</a></li>
                        <li><a href="javascript:void(0);">Contact us</a></li>*@
                </ul>
            </div>
        </nav>
    </div>
    <!-- / navigation -->
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="footer-bott">
        <footer id="footer">
            <div class="container" style="width:100% !important">
                <div class="cols" style="display:none;">
                    <div class="col">
                        <h3>Frequently Asked Questions</h3>
                        <ul>
                            <li><a href="#">The Dummy copy </a></li>
                            <li><a href="#">The Dummy copy</a></li>
                            <li><a href="#">The Dummy copy</a></li>
                            <li><a href="#">The Dummy copy</a></li>
                            <li><a href="#">The Dummy copy</a></li>
                        </ul>
                    </div>
                    <div class="col media">
                        <h3>Social media</h3>
                        <ul class="social">
                            <li><a href="#"><span class="ico ico-fb"></span>Facebook</a></li>
                            <li><a href="#"><span class="ico ico-tw"></span>Twitter</a></li>
                            <li><a href="#"><span class="ico ico-gp"></span>Google+</a></li>
                            <li><a href="#"><span class="ico ico-pi"></span>Pinterest</a></li>
                        </ul>
                    </div>
                    <div class="col contact">
                        <h3>Contact us</h3>
                        <p>10, Darpan Opposite, R C Dutt Road,<br>Alkapuri, Hotel Express, Vadodara,<br>Gujarat 390007</p>
                        <p><span class="ico ico-em"></span><a href="#">contact@asopalavjewellery.com</a></p>
                        <p><span class="ico ico-ph"></span>0265 232 5526</p>
                    </div>
                    <div class="col newsletter">
                        <h3>Join our newsletter</h3>
                        <p>Sed ut perspiciatis unde omnis iste natus sit voluptatem accusantium doloremque laudantium.</p>
                        <form action="#">
                            <input type="text" placeholder="Your email address...">
                            <button type="submit"></button>
                        </form>
                    </div>
                </div>
                <div class="pull-left device-foot">
                    <p>&copy; @DateTime.Now.Year - Asopalav Jewellers Private Limited</p>
                </div>
                <div class="pull-right">
                    <div class="footer_socialIcons">
                        <ul>
                            <li class="socialIcons_link bg-twitter">
                                <a class="fa fa-twitter" href="javascript:void(0)"></a>
                            </li>
                            <li class="socialIcons_link bg-gplus">
                                <a class="fa fa-google-plus" href="javascript:void(0)"></a>
                            </li>
                            <li class="socialIcons_link bg-face">
                                <a class="fa fa-facebook" href="javascript:void(0)"></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- / container -->
        </footer>
    </div>

    @Scripts.Render("~/Script/Common")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Script/Layout")
</body>
</html>
