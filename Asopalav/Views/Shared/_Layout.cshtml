    <script>
        window.onscroll = function () {
            menuHeaderScrollFunction()
        };
        var navbar = document.getElementById("menu");
        var subnav = document.getElementById("submenu-sticky");
        var silver = document.getElementById("submenu-sticky1");
        var metal = document.getElementById("submenu-sticky2");
        var sticky = navbar.offsetTop;
        var desktopImg = document.getElementById("desktopImgMenuLogo");
        var deviceImg = document.getElementById("deviceImgMenuLogo");

        function menuHeaderScrollFunction() {
            if (window.pageYOffset >= sticky) {
                metal.classList.add("megamenu-sticky")
                silver.classList.add("megamenu-sticky")
                subnav.classList.add("megamenu-sticky")
                navbar.classList.add("sticky")
                desktopImg.style.display = "inline-block";
                deviceImg.style.display = "inline-block";
            } else {
                metal.classList.remove("megamenu-sticky")
                silver.classList.remove("megamenu-sticky")
                subnav.classList.remove("megamenu-sticky")
                navbar.classList.remove("sticky");
                desktopImg.style.display = "none";
                deviceImg.style.display = "none";
            }
        }

        func = function (id) {
            document.getElementById('divImg1').style.display = "none";
            document.getElementById('divImg2').style.display = "none";
            document.getElementById('divImg3').style.display = "none";
            document.getElementById('divImg4').style.display = "none";
            document.getElementById(id).style.display = "block";
        }
    </script>

